    @functions {
        public String getDisp(String input, int count)
        {
            if (input == null)
            {
                return  null;
            }
            if (input.Length > count)
            {
                int index = count;
                while (index < input.Length && input.ElementAt(index) != ' ')
                {
                    index++;
                }
                String titleReturn = (index == input.Length) ? input.Substring(0, index) : input.Substring(0, index) + " ... ";
                return  titleReturn;
            }
            return input;
        }
    }
}
