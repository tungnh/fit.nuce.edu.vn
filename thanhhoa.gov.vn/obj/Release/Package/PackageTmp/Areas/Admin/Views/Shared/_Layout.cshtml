<!DOCTYPE html>
<html lang="en" class="app">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Quản trị Website Khoa Công Nghệ Thông Tin - ĐHXD</title>
    <link href="~/LO_GO.png" rel="shortcut icon" type="image/x-icon" />
    <meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    @Styles.Render("~/Areas/Admin/Resources/css/app.v2.css")
    @*Styles.Render("~/Areas/Admin/Resources/css/font.css")*@
    @Styles.Render("~/Areas/Admin/Resources/css/style.css")
    @Styles.Render("~/Areas/Admin/Resources/js/datatables/datatables.css")
    @Styles.Render("~/Areas/Admin/Resources/js/select2/select2.css")
    @Styles.Render("~/Areas/Admin/Resources/js/select2/theme.css")
    @Styles.Render("~/Areas/Admin/Resources/js/datepicker/datepicker.css")

    @Scripts.Render("~/Areas/Admin/Resources/js/app.v2.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/datepicker/bootstrap-datepicker.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/parsley/parsley.min.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/parsley/parsley.extend.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/select2/select2.min.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/jquery.spin.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/notify/notify.min.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/CommonFunction.js")
    @Scripts.Render("~/Areas/Admin/Resources/js/bootbox.min.js")


    <!--[if lt IE 9]> <script src="js/ie/html5shiv.js") <script src="js/ie/respond.min.js") <script src="js/ie/excanvas.js") <![endif]-->
</head>
<body>
    <section class="vbox">
        @Html.Partial("_PartialHeaderPage")
        <section>
            <section class="hbox stretch">
                @Html.Partial("_PartialLeftPage")
                @RenderBody()
            </section>
        </section>
    </section>
</body>
</html>
