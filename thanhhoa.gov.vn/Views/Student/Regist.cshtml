@using thanhhoa.gov.vn.Models;
@{
    ViewBag.Title = "Đăng ký thông tin cựu sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = (String)ViewData["message"];
    var lstCourse = (List<gov_course>)ViewData["lstCourse"];
    var lstSpecialized = (List<gov_specialized>)ViewData["lstSpecialized"];
}

<link href="~/Content/hoidap.css" rel="stylesheet" />
<link href="~/Content/sign-up.css" rel="stylesheet" />
<script src="~/Scripts/map/select2.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Scripts/map/select2.css" />
<script src="~/Content/ckeditor/ckeditor.js"></script>
<div class="mainMod">
    <div class="modLeftMain">
        <div class="modHoidap">
            <form action="/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu/dang-ky-cuu-sinh-vien" method="post" name="form" id="form" enctype="multipart/form-data">
                <input hidden name="description" id="description" />
                <div class="breackrum">
                    <a class="bkHome" href="/"><b>Trang chủ</b></a>
                    <a href="javascript: void(0);"><b>Cựu sinh viên</b></a>
                    <a href="/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu"><b>Cựu sinh viên tiêu biểu</b></a>
                    <a href="javascript: void(0);"><b>Đăng ký thông tin cựu sinh viên</b></a>
                </div>
                @{
                    if (message != null)
                    {
                        <div style="color: #118B11; background-color: #FAFAFA; border: 1px solid #118B11 ; margin-bottom: 5px; padding: 10px; -moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;">
                            <strong>@Html.Raw(message)</strong>
                        </div>
                    }
                }

                <fieldset style="border: 1px solid #c2cae6; padding: 10px; ">
                    <legend style="padding: 0.2em 0.5em; border: 1px solid #c2cae6; text-align: left; font-weight: bold;">Thông tin cựu sinh viên</legend>
                    <table class="tableSignup" width="100%" cellspacing="0" cellpadding="0" style="border: none;">
                        <tr>
                            <td class="tdLeftSignup"></td>
                            <td>(<span class="spanRed">*</span>) <em>Bắt buộc nhập</em></td>
                        </tr>
                        <tr id="tr_full_name">
                            <td class="tdLeftSignup">Họ và tên <span class="spanRed">*</span>:</td>
                            <td><input class="inp_signup" type="text" id="full_name" name="full_name" required></td>
                        </tr>
                        <tr id="tr_lop">
                            <td class="tdLeftSignup">Lớp <span class="spanRed">*</span>: </td>
                            <td><input class="inp_signup" type="text" name="lop" id="lop" required></td>
                        </tr>
                        <tr id="tr_specialized_id">
                            <td class="tdLeftSignup">Chuyên ngành <span class="spanRed">*</span>:</td>
                            <td>
                                <select id="specialized_id" name="specialized_id" style="width: 262px;">
                                    <option value="0">Lựa chọn</option>
                                    @{
                                        foreach (var item in lstSpecialized)
                                        {
                                            <option value="@item.id">@item.specialized_name</option>
                                        }
                                    }
                                </select>
                            </td>
                        </tr>
                        <tr id="tr_course_id">
                            <td class="tdLeftSignup">Khóa học <span class="spanRed">*</span>:</td>
                            <td>
                                <select id="course_id" name="course_id" style="width: 262px;">
                                    <option value="0">Lựa chọn</option>
                                    @{
                                        foreach (var item in lstCourse)
                                        {
                                            <option value="@item.id">@item.course_name</option>
                                        }
                                    }
                                </select>
                            </td>
                        </tr>
                        <tr id="tr_email">
                            <td class="tdLeftSignup">Email <span class="spanRed">*</span>:</td>
                            <td><input class="inp_signup" required type="email" name="email" id="email"></td>
                        </tr>
                        <tr id="tr_phone">
                            <td class="tdLeftSignup">Điện thoại <span class="spanRed">*</span>:</td>
                            <td><input class="inp_signup" required type="text" name="phone" id="phone"></td>
                        </tr>
                        <tr id="tr_address">
                            <td class="tdLeftSignup">Địa chỉ liên hệ <span class="spanRed">*</span>:</td>
                            <td><input class="inp_signup" required type="text" name="address" id="address"></td>
                        </tr>
                        <tr id="tr_department">
                            <td class="tdLeftSignup">Cơ quan <span class="spanRed">*</span>:</td>
                            <td><input class="inp_signup" required type="text" name="department" id="department"></td>
                        </tr>
                        <tr>
                            <td class="tdLeftSignup">Chia sẻ về bản thân :</td>
                            <td><textarea cols="70" rows="7" name="editor1" id="editor1"></textarea>
                            <td>
                        </tr>
                        <tr>
                            <td class="tdLeftSignup">Cho phép hiển thị các thông tin :</td>
                            <td>
                                <div class="quydinhchung" style="height: 140px; padding: 5px 10px;">
                                    <p>
                                        <label style="cursor: pointer;"><input type="checkbox" checked name="show_email" value="TRUE" /> Email</label>
                                    </p>
                                    <p>
                                        <label style="cursor: pointer;"><input type="checkbox" checked name="show_tel" value="TRUE" /> Điện thoại</label>
                                    </p>
                                    <p>
                                        <label style="cursor: pointer;"><input type="checkbox" checked name="show_address" value="TRUE" /> Địa chỉ liên hệ</label>
                                    </p>
                                    <p>
                                        <label style="cursor: pointer;"><input type="checkbox" checked name="show_department" value="TRUE" /> Cơ quan</label>
                                    </p>
                                    <p>
                                        <label style="cursor: pointer;"><input type="checkbox" checked name="show_shared" value="TRUE" /> Chia sẻ về bản thân</label>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="tdLeftSignup">Ảnh đại diện :</td>
                            <td>
                                <input type="file" name="File" id="File">
                            </td>
                        </tr>
                        <tr>
                            <td class="tdLeftSignup"></td>
                            <td>
                                <img style="width: 100px;" id="preview_image" src="/Images/avatar_default.jpg " alt="Ảnh đại diện" />
                            </td>
                        </tr>
                        <tr>
                            <td class="tdLeftSignup"></td>
                            <td>
                                <div>
                                    <img id="img-captcha" src="/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu/get-captcha" alt="Captcha">
                                    <img id="re-captcha" src="~/Images/i-reCapcha.png" style="margin-bottom: 15px; margin-left: 15px; cursor: pointer;" />
                                </div>
                            </td>
                        </tr>
                        <tr id="tr_captcha">
                            <td class="tdLeftSignup">Mã xác nhận:</td>
                            <td>
                                <div>
                                    <input class="inp_signup" onkeydown="enter(this);" type="text" name="captcha" id="captcha" required>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td class="tdOk">
                                <input type="button" value="Đăng ký" onclick="save();" style="border: none;" class="btn_login" />
                                <input type="reset" value="Hủy bỏ" style="border: none;" class="btn_login" />
                                <a href="/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu" class="btn_login">Quay lại</a>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                </fieldset>
            </form>
            <!-- end module dang ky -->
        </div>
        <!-- end module van ban phap quy -->


    </div>
    <!-- end left main w=670 -->
    @Html.Partial("_PartialLeft")
    <!-- colum right 300 emtry -->
    <div class="clear"></div>

</div>
<!--end main module-->

<script>
    $('#specialized_id').select2();
    $('#course_id').select2();

    $('form').bind("keypress", function (e) {
        if (e.keyCode == 13) {
            e.preventDefault();
            return false;
        }
    });

    var ckeditor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, { language: languageCode });
    }
    $(function () { createEditor('vi', 'editor1') });

    $(function () {
        function readURL(input, target) {
            var size = input.files[0];
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                var image_target = $(target);
                reader.onload = function (e) {
                    image_target.attr('src',
                            e.target.result).show();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("body").on("change", "#File", function () {
            readURL(this, "#preview_image")
        });
    });

    function save() {
        resetValidate();
        if (validate()) {
            $.ajax({
                type: "GET",
                url: "/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu/check-captcha",
                data: "captcha=" + $('#captcha').val(),
                success: function (data) {
                    if ($('#captcha').val() != data)
                        $('#tr_captcha').addClass("trErr");
                    else {
                        $.ajax({
                            type: "GET",
                            url: "/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu/check-email",
                            data: "email=" + $('#email').val(),
                            success: function (data) {
                                if (data == 'True') {
                                    document.form.submit();
                                } else {
                                    alert("Email đã được đăng ký!");
                                    $('#tr_email').addClass("trErr");
                                }
                            }
                        });
                    }
                }
            });
        }
    }
    function resetValidate() {
        $('#tr_full_name').removeClass("trErr");
        $('#tr_lop').removeClass("trErr");
        $('#tr_email').removeClass("trErr");
        $('#tr_specialized_id').removeClass("trErr");
        $('#tr_course_id').removeClass("trErr");
        $('#tr_phone').removeClass("trErr");
        $('#tr_address').removeClass("trErr");
        $('#tr_department').removeClass("trErr");
        $('#tr_captcha').removeClass("trErr");
    }

    function validate() {
        var check = true;
        var reg = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;
        if ($('#full_name').val() == "") {
            $('#tr_full_name').addClass("trErr");
            check = false;
        }
        if ($('#lop').val() == "") {
            $('#tr_lop').addClass("trErr");
            check = false;
        }
        if ($('#specialized_id').val() == 0) {
            $('#tr_specialized_id').addClass("trErr");
            check = false;
        }
        if ($('#course_id').val() == 0) {
            $('#tr_course_id').addClass("trErr");
            check = false;
        }
        if ($('#email').val() == "") {
            $('#tr_email').addClass("trErr");
            check = false;
        } else if (!reg.test($('#email').val())) {
            $('#tr_email').addClass("trErr");
            check = false;
        }
        if ($('#phone').val() == "") {
            $('#tr_phone').addClass("trErr");
            check = false;
        }
        if ($('#address').val() == "") {
            $('#tr_address').addClass("trErr");
            check = false;
        }
        if ($('#department').val() == "") {
            $('#tr_department').addClass("trErr");
            check = false;
        }
        if ($('#captcha').val() == "") {
            $('#tr_captcha').addClass("trErr");
            check = false;
        }
        return check;
    }

    $('#re-captcha').bind("click", function () {
        $.ajax({
            type: 'GET',
            url: "/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu/get-captcha",
            success: function (data) {
                $('#img-captcha').attr("src", "/cuu-sinh-vien/cuu-sinh-vien-tieu-bieu/get-captcha");
            }
        });
    });
</script>
