@{
    var lstMenuFooter = (List<thanhhoa.gov.vn.Models.gov_menu>)ViewData["lstMenu"];
}
<footer>
    <div class="clear"></div>
    <div id="navFooter">
        <div class="wrapper">
            <ul class="ulNavFooter">
                @{
                    foreach (var item in lstMenuFooter.Where(m => m.id_parent == 0))
                    {
                        <li><a href="@item.link">@item.title</a></li>
                        if(lstMenuFooter.Last().id != item.id){
                            @Html.Raw("|");
                        }
                    }
                }
            </ul>
        </div>
    </div>
    <!-- end bottom -->

