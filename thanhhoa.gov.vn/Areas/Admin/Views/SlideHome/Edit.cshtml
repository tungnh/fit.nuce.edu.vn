@{
    ViewBag.Title = "Cập nhật slide trang chủ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var slideHomeInfo = (thanhhoa.gov.vn.Models.gov_slide_home)ViewData["slideHomeInfo"];
}
<script src="~/Areas/Admin/Resources/ckfinder/ckfinder.js"></script>
<section id="content">
    <section class="vbox">
        <section class="scrollable padder">
            <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
                <li class="active">
                    <i class="fa fa-pencil"></i> Quản lý tin tức
                </li>
                <li class="active">
                     Danh sách slide trang chủ
                </li>
                <li class="active">
                     Cập nhật slide trang chủ
                </li>
            </ul>
            <div class="row">
                <div class="col-sm-12">
                    <section class="panel panel-default">
                        <div class="panel-body">
                            <form data-validate="parsley" class="form-horizontal" enctype="multipart/form-data" name="fmenu" method="post" action="SaveEdit">
                                @{
                                    if(slideHomeInfo != null){
                                        <h5 class="page-header m-t-xs" style="font-weight: 600;">
                                            <i class="fa fa-foursquare"></i> Cập nhật slide trang chủ
                                        </h5>
                                    <input hidden name="id" value="@slideHomeInfo.id" />
                                        <div class="form-group m-b-xs m-l">
                                            <span class="col-lg-2 control-span" style="padding-right: 0px;">
                                                Style :
                                            </span>
                                            <div class="col-lg-7">
                                                <select id="style" name="type" style="width: 276px;">
                                                    <option value="">Chọn kiểu slide</option>
                                                    <option value="cube" @if(slideHomeInfo.type.Equals("cube")){@Html.Raw(" selected")}>cube</option>
                                                    <option value="cubeRandom" @if (slideHomeInfo.type.Equals("cubeRandom")) { @Html.Raw(" selected")  }>cubeRandom</option>
                                                    <option value="block" @if (slideHomeInfo.type.Equals("block")) { @Html.Raw(" selected")  }>block</option>
                                                    <option value="cubeStopRandom" @if (slideHomeInfo.type.Equals("cubeStopRandom")) { @Html.Raw(" selected")  }>cubeStopRandom</option>
                                                    <option value="cubeHide" @if (slideHomeInfo.type.Equals("cubeHide")) { @Html.Raw(" selected")  }>cubeHide</option>
                                                    <option value="cubeSize" @if (slideHomeInfo.type.Equals("cubeSize")) { @Html.Raw(" selected")  }>cubeSize</option>
                                                    <option value="horizontal" @if (slideHomeInfo.type.Equals("horizontal")) { @Html.Raw(" selected")  }>horizontal</option>
                                                    <option value="showBars" @if (slideHomeInfo.type.Equals("showBars")) { @Html.Raw(" selected")  }>showBars</option>
                                                    <option value="fade" @if (slideHomeInfo.type.Equals("fade")) { @Html.Raw(" selected")  }>fade</option>
                                                    <option value="fadeFour" @if (slideHomeInfo.type.Equals("fadeFour")) { @Html.Raw(" selected")  }>fadeFour</option>
                                                    <option value="cut" @if (slideHomeInfo.type.Equals("cut")) { @Html.Raw(" selected")  }>cut</option>
                                                    <option value="circles" @if (slideHomeInfo.type.Equals("circles")) { @Html.Raw(" selected")  }>circles</option>
                                                    <option value="blind" @if (slideHomeInfo.type.Equals("blind")) { @Html.Raw(" selected")  }>blind</option>
                                                    <option value="cubeSpread" @if (slideHomeInfo.type.Equals("cubeSpread")) { @Html.Raw(" selected")  }>cubeSpread</option>
                                                    <option value="glassCube" @if (slideHomeInfo.type.Equals("glassCube")) { @Html.Raw(" selected")  }>glassCube</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs m-l">
                                            <span class="col-lg-2 control-span" style="padding-right: 0px;">
                                                Đường dẫn  :
                                            </span>
                                            <div class="col-lg-7">
                                                <input type="text" name="link"
                                                       value="@slideHomeInfo.link"
                                                       class="form-control input-sm" placeholder="Đặt đường dẫn cho slide" />
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs m-l">
                                            <span class="col-lg-2 control-span">
                                                Mô tả :
                                            </span>
                                            <div class="col-lg-7">
                                                <textarea cols="50" rows="3" class="form-control input-sm" name="description" placeholder="Viết một vài điều gì đó về slide này">@slideHomeInfo.description</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs m-l">
                                            <span class="col-lg-2 control-span" style="padding-right: 0px;">
                                                Số thứ tự <font color="red">*</font> :
                                            </span>
                                            <div class="col-lg-7">
                                                <input type="text" name="order_number"
                                                       data-required="true"
                                                       value="@slideHomeInfo.order_number"
                                                       data-required-message="Trường số thứ tự không được để trống"
                                                       data-type="number"
                                                       data-type-number-message="Phải nhập đúng định dạng số"
                                                       class="form-control input-sm" placeholder="Số thứ tự" />
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs m-l">
                                            <span class="col-lg-2 control-span">
                                                Ảnh đại diện <font color="red">*</font> :
                                            </span>
                                            <div class="col-lg-7">
                                                <input type="hidden" value="@slideHomeInfo.attach_file_path" name="attach_file_path" id="avatar">
                                                <input type="button" class="btnSearch" id="btnAvatar" value="Chọn ảnh" style="width : 200px;" /> &nbsp; <span id="urlAvatar"> Không có hình ảnh nào được chọn</span>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs m-l">
                                            <span class="col-lg-2 control-span">
                                            </span>
                                            <div class="col-lg-7">
                                                <img src="@slideHomeInfo.attach_file_path" id="images" style="max-width: 200px;" />
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs m-t-md">
                                            <span class="col-lg-2 control-span">
                                                Người tạo:
                                            </span>
                                            <div class="col-lg-4">
                                                <strong><i>@slideHomeInfo.entry_username</i></strong>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs">
                                            <span class="col-lg-2 control-span">
                                                Thời gian tạo:
                                            </span>
                                            <div class="col-lg-4">
                                                <strong><i>@slideHomeInfo.entry_datetime.ToString("dd/MM/yyyy HH:mm")</i></strong>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs">
                                            <span class="col-lg-2 control-span">
                                                Người cập nhật cuối:
                                            </span>
                                            <div class="col-lg-4">
                                                <strong><i>@slideHomeInfo.update_username</i></strong>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-xs">
                                            <span class="col-lg-2 control-span">
                                                Thời gian cập nhật cuối:
                                            </span>
                                            <div class="col-lg-4">
                                                <strong><i>@slideHomeInfo.update_datetime.ToString("dd/MM/yyyy HH:mm")</i></strong>
                                            </div>
                                        </div>
                                        <h5 class="page-header m-t-xs" style="font-weight: 600;"></h5>
                                        <div class="form-group m-b-xs">
                                            <span class="col-lg-2 control-span m-l-md"></span>
                                            <div class="col-lg-6">
                                                <input type="submit" class="btn btn-sm btn-primary"
                                                       style="width: 90px;" value="Lưu" />
                                                <a href="index" class="btn btn-sm btn-danger"
                                                   data-dismiss="modal" style="width: 90px;">Hủy bỏ</a>
                                            </div>
                                        </div>
                                    } else{
                                        @Html.Raw("<font color='red'><b>Slide không tồn tại, hoặc đã bị xóa!</b></font> Nhấn vào <a href='index' style='text-decoration: underline;'>đây</a> để quay lại");
                                    }
                                }
                                
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </section>
        @Html.Partial("_PartialFooter")
    </section>
</section>

<script>
    $('#style').select2();
    $(function () {
        $('#btnAvatar').click(function () {
            var ckfinder = new CKFinder();
            ckfinder.selectActionFunction = function (fileUrl) {
                $('#urlAvatar').html(fileUrl);
                $('#avatar').val(fileUrl);
                $('#images').attr("src", fileUrl);
                urlImages = fileUrl;
            };
            ckfinder.popup();
        });
    });
</script>
